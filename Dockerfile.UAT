# Base image
FROM python:3.11-slim

# Branch-specific environment variables
ENV DB_HOST=uat-db.local
ENV DB_USER=uat_user
ENV DB_PASS=uat_pass123
ENV API_KEY=uat_api_003

# Working directory
WORKDIR /app

# Copy your app
COPY . /app

# Install requirements
RUN pip install --no-cache-dir -r requirements.txt

# Default command
CMD ["python3", "generate_dashboards.py"]
