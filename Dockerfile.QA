# Base image
FROM python:3.11-slim

# Branch-specific environment variables
ENV DB_HOST=qa-db.local
ENV DB_USER=qa_user
ENV DB_PASS=qa_pass123
ENV API_KEY=qa_api_002

# Working directory
WORKDIR /app

# Copy your app
COPY . /app

# Install requirements
RUN pip install --no-cache-dir -r requirements.txt

# Default command
CMD ["python3", "generate_dashboards.py"]
